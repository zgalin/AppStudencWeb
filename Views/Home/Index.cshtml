@model AppStudencWeb.Controllers.HomeViewModel

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>AppStudenc</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
</head>
<body>
    <div class="container">
        <h1 class="mt-5">AppStudenc</h1>

        <h2 class="mt-3">Izberite restavracijo</h2>
        <p>Študentskih bonov na voljo: @Model.StudentCouponsLeft</p>
        <div class="list-group">
            @foreach (var restaurant in Model.Restaurants)
            {
                <a href="@Url.Action("Details", "Home", new { id = restaurant.Id })" class="list-group-item list-group-item-action">
                    <h5 class="mb-1">@restaurant.Name</h5>
                    <p class="mb-1">@restaurant.Description</p>
                    <h6 class="mt-3">Meni</h6>
                    <ul class="list-group">
                        @foreach (var foodItem in restaurant.Menu)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                @foodItem.Name
                                <span class="badge badge-primary badge-pill">@foodItem.Price €</span>
                            </li>
                        }
                    </ul>
                </a>
            }
        </div>
    </div>
</body>
</html>
