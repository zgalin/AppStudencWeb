@model AppStudencWeb.Controllers.TrackOrderViewModel

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Track Order - AppStudenc</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />
    <script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
    <style>
        #map { height: 400px; }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="mt-5">Track Order</h1>
        <p>@Model.OrderStatus</p>

        <div id="map" class="mb-4"></div>
        <script>
            var map = L.map('map').setView([46.056946, 14.505751], 13);
            L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
            }).addTo(map);
            var restaurantMarker = L.marker([46.056946, 14.505751]).addTo(map)
                .bindPopup('Gostilna pri Jo≈æetu')
                .openPopup();
            var deliveryMarker = L.marker([@Model.Latitude, @Model.Longitude]).addTo(map)
                .bindPopup('Delivery to your location')
                .openPopup();
            var route = L.polyline([
                [46.056946, 14.505751],
                [@Model.Latitude, @Model.Longitude]
            ], {color: 'blue'}).addTo(map);
        </script>

        <a href="/" class="btn btn-primary">Back to Home</a>
    </div>
</body>
</html>
